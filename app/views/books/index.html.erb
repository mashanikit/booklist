<h1>Books</h1>

<ul class="books">
  <% @books.each do |book| %>
    <li class="book">
      <h1><%= book.title %></h1>

      <dl>
        <dt>Author</dt>
        <dd><%= book.author %></dd>

        <dt>Already Read?</dt>
        <dd><%= book.already_read %></dd>
      </dl>
    </li>
  <% end %>
</ul>
